<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">digitalhub_doublecheck_changes_grid.digitalhub_doublecheck_changes_grid_data_source</item>
            <item name="deps" xsi:type="string">digitalhub_doublecheck_changes_grid.digitalhub_doublecheck_changes_grid_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">digitalhub_doublecheck_changes_columns</item>
        <item name="buttons" xsi:type="array">
            <item name="add" xsi:type="array">
                <item name="name" xsi:type="string">add</item>
                <item name="label" xsi:type="string" translate="true">Adicionar Novo</item>
                <item name="class" xsi:type="string">primary</item>
                <item name="url" xsi:type="string">*/*/new</item>
            </item>
        </item>
    </argument>
    <dataSource name="digitalhub_doublecheck_changes_grid_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">DigitalHub\DoubleCheck\Model\ResourceModel\Change\Grid\Collection</argument>
            <argument name="name" xsi:type="string">digitalhub_doublecheck_changes_grid_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="update_url" xsi:type="url" path="mui/index/render"/>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
                </item>
            </argument>
        </argument>
    </dataSource>
    <columns name="spinner">
        <settings>
            <spinner>digitalhub_doublecheck_changes_columns</spinner>
        </settings>
    </columns>
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <exportButton name="export_button"/>
        <filters name="listing_filters"/>
        <filterSearch name="fulltext"/>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="digitalhub_doublecheck_changes_columns">
        <!-- Defina as colunas aqui -->
        <!-- ... -->

        <column name="action" class="DigitalHub\DoubleCheck\Ui\Component\Listing\Column\ChangeActions">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="indexField" xsi:type="string">id</item>
                    <item name="component" xsi:type="string">DigitalHub_DoubleCheck/js/grid/columns/actions</item>
                    <item name="dataType" xsi:type="string">actions</item>
                    <item name="label" xsi:type="string" translate="true">Ações</item>
                    <item name="sortOrder" xsi:type="number">100</item>
                </item>
            </argument>
        </column>
    </columns>
</listing>
